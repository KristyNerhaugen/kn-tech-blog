{{!-- pulls in post-info partial --}}
{{> post-info post}}

{{!-- show comment form only if user is logged in --}}
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add comment</button>
    </div>
</form>
{{/if}}

{{!-- pulls in comments partial --}}
{{> comments post.comments}}

{{!-- connect to comment.js if logged in --}}
{{#if loggedIn}}
<script src="/public/javascript/comment.js"></script>
{{/if}}
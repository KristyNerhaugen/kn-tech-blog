<ol class="post-list">
    <li>
        <article class="post">
            <div class="title">
                <h2>{{title}}</h2>
                <p>{{postContent}}</p>
            </div>
            <div class="comment">
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
</ol>
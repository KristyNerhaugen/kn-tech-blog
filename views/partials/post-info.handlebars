<article class="post">
    <div class="title">
        <h4> <a href="/post/{{id}}">{{title}}</a> </h4>
        <p>{{postContent}}</p>
        <p>Created by {{user.username}} on {{format_date createdAt}}</p>
        <p>{{comments.length}} {{format_plural "comment" comments.length}}</p>
    </div>
</article>